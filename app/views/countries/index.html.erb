<p id="notice"><%= notice %></p>

<h1>
  Listing Countries
  <small>( <%=number_with_delimiter(@countries.total_count, :delimiter => ',') %> ) country</small>
</h1>

<br>

<%= link_to 'New Country', new_country_path %>

<br>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Total Users</th>
      <th colspan="3"> Actions </th>
    </tr>
  </thead>

  <tbody>
    <% @countries.each do |country| %>
      <tr>
        <td><%= country.id %></td>
        <td><%= country.name %></td>
        <td><%= country.users.count %> user</td>
        <td><%= link_to 'Show', country %></td>
        <td><%= link_to 'Edit', edit_country_path(country) %></td>
        <td><%= link_to 'Destroy', country, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>

  <tfoot>
    <tr>
      <th colspan="8">
        <%= paginate @countries %>
      </th>
    </tr>
  </tfoot>

</table>
